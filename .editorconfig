# EditorConfig is awesome: https://EditorConfig.org
# Unix-style newlines with a newline ending every file
[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
indent_style=space
indent_size=4
trim_trailing_whitespace=true
# Python2 treats a tab as 8 spaces, let's show it that way for safety.  New code uses the above settings which use
# spaces instead of tabs anyway.
[*.py]
tab_width=8
[{.eslintrc,.babelrc,jest.config,.stylelintrc,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_style=space
indent_size=2
[{*.yml,*.yaml}]
indent_style=space
indent_size=2
# Tab indentation (no size specified)
[Makefile]
indent_style = tab
